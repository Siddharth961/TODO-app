doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title TODO App
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN', crossorigin='anonymous')
    link(rel='stylesheet', href='style.css')
    link(rel='shortcut icon', href='logo.jpg', type='image/x-icon')

  body
    .signup-container
      .col-lg-3.col-sm-6
        form(action='/login',enctype="application/x-www-form-urlencoded" method='POST' autocomplete = "false")
          .fs-2.text-center.mb-4.text-light Log Into Your Account
          .mb-3
            label.form-label(for='exampleInputPassword1') Email address
            input#exampleInputEmail1.form-control(type='email',name='email', aria-describedby='emailHelp', placeholder='you@example.com' ,autocomplete="none")
          .mb-3
            label.form-label(for='exampleInputPassword1') Password
            input#exampleInputPassword1.form-control(type='password', name='password', placeholder='*********', autocomplete="new-password")
         
          button.btn.log-in-btn.mt-3(type='submit') Log In
          .text-center.fs-4.text-light.p-2 OR
          a(href='/signup-page')
            button.btn.sign-up-btn(type='button')
              | Sign Up
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL', crossorigin='anonymous')