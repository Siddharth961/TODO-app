    // Delete Note
    .delete.col-10.col-md-4
      .fs-5.fw-medium.mt-3 Are you sure, you want to delete this note?
      .p-4
        button#del-yes-btn(type='button') YES
        button#del-no-btn(type='button') NO
    // Edit note
    .edit.col-10.col-md-4
      .d-flex.flex-column.bg-light-subtle
        input#heading(type='text', name='heading', value='${note.title}')
        |  
        textarea#body(name='body', cols='30', rows='4') &quot;${note.body}&quot;
        .d-flex.justify-content-between.px-4.pt-2
          button#note-edit-btn(type='button') Edit
          button#note-cancel-btn(type='button') Cancel
    // Profile
    .profile.col-3.border
      h4
        i.bi.bi-x-lg
      h1
        i.bi.bi-person-fill
      h6 Siddharth jain
      p jainsiddharth.rattan1@gmail.com
      button Change Password
