    // Reset Password
    .reset.col-lg-3.col-10.p-3
      h4
        i.bi.bi-x-lg.float-end
      form(action='/reset', enctype='application/x-www-form-urlencoded', method='POST')
        .fs-3.text-center.mb-4 Change Password
        .mb-3
          label.form-label(for='password') Current Password
          input#exampleInputPassword1.form-control(name='password', type='password', placeholder='*********')
        .mb-3
          label.form-label(for='passwordNew') New Password
          input#exampleInputPassword1.form-control(name='passwordNew', type='password', placeholder='*********')
        .mb-4
          label.form-label(for='passwordConfirm') Confirm Password
          input#exampleInputPassword1.form-control(name='passwordConfirm', type='password', placeholder='*********')
        button.btn.pass-update-btn(type='submit') Update Password
